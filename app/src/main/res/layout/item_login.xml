            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/tvEmail"
                android:text="gikizay@gmail.com"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



